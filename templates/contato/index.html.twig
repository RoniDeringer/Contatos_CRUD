{% extends 'base.html.twig' %}
{% block title %} {{ titulo }} {% endblock %}
{% block body %}
<h1> {{ titulo }} </h1>
<hr>

<!--
Link para adicionar pessoa
-->
<a href="{{ path ('contato_adicionar') }}">Adicionar contato</a>

<!--
Tabela mostrando a primeira linha
-->
<table class="table"border="1px">
    <thead>
        <tr><b>
            <td><b>    Id              </b></td>
            <td><b>    Tipo            </b></td>
            <td><b>    Descrição       </b></td>
            <td><b>    Nome da Pessoa  </b></td>
            <td><b>    Ações           </b></td>
        </tr>
    </thead>
    <tbody>
    <!--
    For percorrendo tabela pessoas para mostrar na tabela
    -->
    {% for contato in contatos %}
    <tr>
        <td> {{ contato.id }} </td>
        <td> 
        <!-- exibir valores boolean de 'tipo' -->
            {% if contato.tipo == '1' %} 
                    Email
                {% else %}
                    Telefone
                {% endif %}
        </td>
        <td> {{ contato.descricao }}     </td>
        <td><a href="{{ path ('pessoa_visualizar', {id:contato.idPessoa.id}) }}"> {{ contato.idPessoa.nome }} </a></td>
        <td>
        <a href="{{ path ('contato_editar', {id:contato.id}) }}"> Editar  </a>
        <a href="{{ path ('contato_excluir',{id:contato.id}) }}"> Excluir </a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}